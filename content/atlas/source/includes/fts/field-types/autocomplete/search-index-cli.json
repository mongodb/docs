{
  "name": "default",
  "collectionName": "<collection>",
  "database": "<database>",
  "type": "search",
  "definition": {
    "mappings": {
      "dynamic": true|false, 
      "fields": {
        "<field-name>": {
          "type": "autocomplete",
          "analyzer": "<lucene.analyzer>",
          "tokenization": "edgeGram|rightEdgeGram|nGram",
          "minGrams": <2>,
          "maxGrams": <15>,
          "foldDiacritics": true|false,
          "similarity": { "type": "bm25|boolean|stableTfl" }
        }
      }
    }
  }
}