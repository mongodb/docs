db.movies.aggregate([{
    "$search": {
      "text": {
        "path": "title",
        "query": "men",
        "score": {
          "function": {
            "log": {
              "path": {
                "value": "imdb.rating",
                "undefined": 10
              }
            }
          }
        }
      }
    }
  },
  {
    "$limit": 5
  },
  {
    "$addFields": {
      "score": {
        "$meta": "searchScore"
      }
    }
  },
  {
    "$setWindowFields": {
      "output": {
        "maxScore": {
          "$max": "$score"
        }
      }
    }
  },
  {
    "$addFields": {
      "normalizedScore": {
        "$divide": [
          "$score", "$maxScore"
        ]
      }
    }
  },
  {
    "$project": {
      "_id": 0,
      "title": 1,
      "score": 1,
      "maxScore": 1,
      "normalizedScore": 1
    }
}])