db.embedded_movies.aggregate([
  {
    "$search": {
      "index": "<index-name>",
      "vectorSearch": {
        "path": "plot_embedding_voyage_3_large",
        "filter": {
          "text": {
            "path": "fullplot",
            "query": "charming animal",
            "fuzzy": {}
          }
        },
        "queryVector": CHARMING_ANIMAL_STORY,
        "limit": 10,
        "exact": true
      },
      "concurrent": true
    }
  },
  {
    "$project": {
      "_id": 0,
      "title": 1,
      "plot": 1,
      "score": { "$meta": "searchScore" }
    }
  }
])