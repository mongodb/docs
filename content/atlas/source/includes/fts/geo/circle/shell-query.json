db.listingsAndReviews.aggregate([
  {
    "$search": {
      "geoWithin": {
        "circle": {
          "center": {
            "type": "Point",
            "coordinates": [-73.54, 45.54]
          },
          "radius": 1600
        },
        "path": "address.location"
      }
    }
  },
  {
    "$limit": 3
  },
  {
    "$project": {
      "_id": 0,
      "name": 1,
      "address": 1
    }
  }
])
