{
  "name": "mongosh",
  "version": "1.0.0",
  "description": "This is the code example test suite for the MongoDB Shell examples across the MongoDB documentation.",
  "license": "ISC",
  "author": "MongoDB",
  "type": "module",
  "main": "index.js",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "test": "export $(xargs < .env) && jest --runInBand --detectOpenHandles --testMatch='**/tests/**/*.test.js'",
    "test:utils": "export $(xargs < .env 2>/dev/null || true) && jest --runInBand --detectOpenHandles --testMatch='**/utils/**/__tests__/**/*.test.js'",
    "test:all": "export $(xargs < .env) && jest --runInBand --detectOpenHandles",
    "snip": "node snip.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "babel-jest": "^30.2.0",
    "jest": "^30.0.5"
  },
  "dependencies": {
    "mongodb": "6.20.0"
  }
}
