db.schools.aggregate({
  "$search": {
    "embeddedDocument": {
      "path": "teachers",
      "operator": {
        "compound": {
          "must": [{
            "embeddedDocument": {
              "path": "teachers.classes",
              "operator": {
                "compound": {
                  "must": [{
                    "text": {
                      "path": "teachers.classes.grade",
                      "query": "12th"
                    }
                  },
                  {
                    "text": {
                      "path": "teachers.classes.subject",
                      "query": "science"
                    }
                  }]
                }
              }
            }
          }],
          "should": [{
            "text": {
              "path": "teachers.last",
              "query": "smith"
            }
          }]
        }
      }
    }
  }
},
{
  "$project": {
    "_id": 1,
    "teachers": 1,
    "score": { $meta: "searchScore" }
  }
})
