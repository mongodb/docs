[
  {
    "$search": {
      "index": "compound-query-custom-score-tutorial",
      "compound": {
        "should":[ {
          "compound":{
            "must":[ 
              {
                "text": {
                  "query": "ghost",
                  "path": ["plot","title"]
                }
              } 
            ],
            "mustNot":[ 
              {
                "text": {
                  "query": "Comedy",
                  "path": ["genres"]
                }
              } 
            ]
          }
        },
        {
          "compound":{
            "must":[ 
              {
                "text": {
                  "query": "ghost",
                  "path": ["plot","title"]
                }
              } 
            ],
            "filter":[ 
              {
                "text": {
                  "query": "Comedy",
                  "path": ["genres"]
                }
              } 
            ],
            "score":{ "boost": { "value": 0.5} }
            }
          } 
        ]
      }
    }
  }
]