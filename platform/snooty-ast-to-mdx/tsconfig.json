{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "test/**/*"]
}