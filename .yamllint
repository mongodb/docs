---
# yamllint configuration for GitHub Actions workflows
# More lenient than default to accommodate workflow-specific patterns

extends: default

rules:
  # Allow longer lines for GitHub Actions expressions
  line-length:
    max: 200
    level: warning
  
  # Document start is optional for GitHub Actions
  document-start:
    present: false
  
  # Allow truthy values (on/off are common in GitHub Actions)
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']
    check-keys: false
  
  # Allow fewer spaces before comments (common in workflows)
  comments:
    min-spaces-from-content: 1
  
  # Allow empty values (common in GitHub Actions)
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: false
  
  # Indentation rules
  indentation:
    spaces: 2
    indent-sequences: true
  
  # Allow trailing spaces (sometimes needed in multiline strings)
  trailing-spaces: disable

